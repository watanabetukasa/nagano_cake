<h1>配送先登録・一覧</h1>

<div class="address">
<%=form_with model:@address, url: addresses_path,local:true do |f| %>

  <p>名前</p>
  <%=f.text_field :name %>

  <p>郵便番号</p>
  <%=f.text_field :postal_code %>

  <p>配送先住所</p>
  <%=f.text_field :address %>


  <br>
  <%=f.submit "新規登録" %>

<% end %>

</div>

<div class="address">

  <table border="1" class="address-table">
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
    <% @addresses.each do |address| %>
    <tr>
      <td><%=address.postal_code %></td>
      <td><%=address.address %></td>
      <td><%=address.name %></td>
      <td>
        <button><%=link_to"編集",edit_address_path(address.id)%></button>
        <button><%=link_to"削除",address_path(address.id), method: :delete %></button>
      </td>
    </tr>
    <% end %>

  </table>

</div>

