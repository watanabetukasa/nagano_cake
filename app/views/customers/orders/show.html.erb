<h1>注文履歴詳細画面</h1>

<div class="order-detail">
  <div class="order">
    <div>
      <h4>注文情報</h4>
      <table border="1">
        <tr>
          <th>注文日</th>
          <td><%=@order.created_at.strftime('%y/%m/%d') %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>
            〒<%=@order.postal_code %><br>
            <%=@order.address %><br>
            <%=@order.name %><br>
          </td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%=@order.payment_method %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="order-pay">
    <h4>請求情報</h4>
    <table border="1" class="order-table">
      <tr>
        <th>商品合計</th>
        <td><%=@order.total_payment - 800 %></td>
      </tr>
      <tr>
        <th>配送料</th>
        <td><%=@order.shipping_cost %></td>
      </tr>
      <tr>
        <th>ご請求額</th>
        <td><%=@order.total_payment %></td>
      </tr>
    </table>
  </div>
</div>


<div class="order-content">
  <h4>注文内容</h4>
  <table border="1">
    <tr>
      <th>商品</th>
      <th>単価（税込）</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  <% @order_details.each do |order_detail| %>
  <tr>
      <th><%=order_detail.item.name %></th>
      <th><%=order_detail.price %></th>
      <th><%=order_detail.amount %>個</th>
      <th><%=(order_detail.price).floor * (order_detail.amount)%>円</th>
  </tr>
  <% end %>

  </table>
</div>