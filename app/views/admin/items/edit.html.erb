<h1>商品編集画面</h1>

<div class="item-edit">
  <table>
    <%=form_with model:@item , url: admin_update_items_path(@item.id),local:true do |f| %>
    <tr>
      <th>商品名</th>
      <td><%=f.text_field:name %></td>
    </tr>
    <tr>
      <th>商品画像</th>
      <td><%=f.attachment_field :image %></td>
    </tr>
    <tr>
      <th>商品説明</th>
      <td><%=f.text_area:introduction %></td>
    </tr>
    <tr>
      <th>税抜価格</th>
      <td><%=f.text_field:price %></td>
    </tr>
  </table>
  <%=f.submit'保存'%>
  <% end %>
  <%=link_to "商品一覧へ",admin_items_path %>
</div>