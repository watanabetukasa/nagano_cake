<h1>商品編集画面</h1>

<%=form_with model:@item , url: admin_update_items_path(@item.id),local:true do |f| %>
<p>商品名 : <%=f.text_field:name %></p>
<p></p>
<p>商品説明 : <%=f.text_area:introduction %></p>
<p>税抜価格 : <%=f.text_field:price %></p>
<p>販売ステータス : <%=f.text_field:is_active %></p>

<%=f.submit'保存'%>
<% end %>
<%=link_to "商品一覧へ",admin_items_path %>
