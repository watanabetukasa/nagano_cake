<h1>商品詳細画面</h1>

<div class="item-detail">
  <div>
    <p><%=attachment_image_tag @item, :image, :fill, 300, 300, fallback: 'no_image.jpg' %></p>
  </div>
  <div class="item-detail-text">
    <p>商品名 : <%=@item.name %></p>
    <p>商品説明 : <%=@item.introduction %></p>
    <p>税抜価格 : <%=@item.price %></p>
  </div>
</div>

<div class="item-link">
  <%=link_to "商品編集へ",edit_admin_item_path(@item.id), class: 'btn' %>
</div>
