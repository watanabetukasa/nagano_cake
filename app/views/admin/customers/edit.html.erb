<h1>顧客編集画面</h1>

  <%=form_with model:@customer , url: admin_update_customers_path(@customer.id),local:true do |f| %>
  <div class="container">
    <div class="row">

      <div class="col-lg-10">
        <table class="table table-striped">
          <tr>
              <th>氏名</th>
              <th><%= f.text_field:last_name %>  <%=f.text_field:first_name %></th>
          </tr>
          <tr>
              <th>フリガナ</th>
              <th><%= f.text_field:last_name_kana %>  <%=f.text_field:first_name_kana %></th>
          </tr>
          <tr>
              <th>郵便番号</th>
              <th><%= f.text_field:postal_code %></th>
          </tr>
          <tr>
              <th>住所</th>
              <th><%= f.text_area:address %></th>
          </tr>
          <tr>
              <th>電話番号</th>
              <th><%= f.text_field:telephone_number %></th>
          </tr>
          <tr>
              <th>メール</th>
              <th><%= f.text_field:email%></th>
          </tr>
          <tr>
              <th>会員</th>
              <th><%= f.select :is_deleted, [["会員","false"], ["退会済み","true"]], calss:"form-control" %></th>
          </tr>
        </table>
        <div class="col-md-4"></div>


        <%=f.submit'保存'%>
        <% end %>
        </div>

  </div>
</div>
